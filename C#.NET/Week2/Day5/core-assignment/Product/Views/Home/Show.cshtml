@model Association
<div class="text-center">
    <h1><a href="/">Product</a> | <a href="/Home/Privacy">Categorie</a> </h1>
<h1>@ViewBag.OneProdWithCategories.Name</h1>
    
    <h3>Category</h3>
</div>
 <form asp-action="addCattoProd" method="post" asp-route-ProductId="@ViewBag.OneProdWithCategories.ProductId">

    <div class="mb-3">
        <label class="col-sm-2 col-form-label" asp-for="CategorieId">Categories</label>
    <select class="form-select form-select-lg mb-3" aria-label="Default select example" asp-for="CategorieId">
    @foreach (var c in ViewBag.AllCategory)
    {
        <option value="@c.CategorieId">@c.Name</option>

    }
    </select>
    <input type="submit" value="Add Category">
    </div>

    </form>

<div class="border border-dark px-5">

    @foreach (Association a in ViewBag.OneProdWithCategories.CategorieLinked)
    {
        
    <p>@a.Categorie.Name</p>
    }
</div>
</div>