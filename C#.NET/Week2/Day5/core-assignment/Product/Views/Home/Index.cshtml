@{
    ViewData["Title"] = "Home Page";
}
@model Produit
<div class="text-center">
    <h1><a href="/">Product</a> | <a href="/Home/Privacy">Categorie</a> </h1>
</div>
<div class="row">
    <div class="col-6">
        <h1>New Product</h1>
                <form asp-action="CreateProduct" asp-controller="Home">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name"></span>
                        <input asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description"></span>
                        <input asp-for="Description">
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <span asp-validation-for="Price"></span>
                        <input asp-for="Price">
                    </div>
                    <input type="Submit" value="Create">
                </form>
    </div>
    <div class="col-6">
        <h1>All Products</h1>
        @foreach (Produit P in ViewBag.AllProduct)
        {
            <h3><a asp-controller="Home" 
        asp-action="Show" 
        asp-route-productId="@P.ProductId">@P.Name</a></h3>
            
        }
        
    </div>
</div>
